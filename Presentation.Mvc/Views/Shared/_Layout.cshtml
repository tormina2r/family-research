<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Family Research</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="fr-site-container">
        <div class="fr-menu">
            @Html.ActionLink("Family Research", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            @Html.ActionLink("Family tree", "Index", "Person")
        </div>
        <div class="fr-content">
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
